lcSql = ""
loDateTime = CREATEOBJECT("datetime")
loCommand = CREATEOBJECT("odbc_command")
loResCli = CREATEOBJECT("odbc_result")
lnIdVentaC = 0
lnPtoVta = INT(VAL(ALLTRIM(getconfig("PTOVTA"))))
lnNroCbte = 0
