	SET PRINTER TO NAME("Bullzip PDF Printer")
	
	** Agrego nueva modalidad de generar PDF por parámetro.
	IF !Thisform.cbte_por_cpto THEN
		SELECT cur_aux
		REPORT FORM &lcRepName TO PRINTER NOCONSOLE
	ELSE
