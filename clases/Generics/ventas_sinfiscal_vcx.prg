				SELECT vtadcp
				REPORT FORM &lcRepNameCP TO PRINTER NOCONSOLE
			ELSE
				* Paso por acá si el comprobante tiene detalle de artículos
				SELECT cur_aux
				IF RECCOUNT("cur_aux") = 0 THEN
					SELECT cur_detalle
				ENDIF
				m.observ = cur_cabecera.observ
				REPORT FORM &lcRepName TO PRINTER NOCONSOLE
			ENDIF
		ELSE
