	&& Pasa por acá si la columna que se está modificando
	&& corresponde a prioridad 1
	
	lnCant = cur_detalle.cant_pri2 + cur_detalle.cant_falt
	
	IF lnCant <> 0 THEN
		IF tnValue = cur_detalle.cantidad THEN
			SELECT cur_detalle
			LOCK()
			REPLACE cur_detalle.cant_pri2 WITH 0
