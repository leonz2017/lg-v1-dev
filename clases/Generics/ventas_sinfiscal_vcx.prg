	lcSql = lcSql + "SET ventascab.usuBaja = '" + ALLTRIM(gcCodUsu) + "', "
	lcSql = lcSql + "	ventascab.fecBaja = current_timestamp, "
	lcSql = lcSql + "	ventascab.idHostBaja = '" + ALLTRIM(SYS(0)) + "' "
