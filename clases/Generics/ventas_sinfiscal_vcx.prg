		DO CASE
			CASE ALLTRIM(tc_letra) == "A"
				RETURN 1
			CASE ALLTRIM(tc_letra) == "B"
				RETURN 6
			CASE ALLTRIM(tc_letra) == "C" 
				RETURN 11
		ENDCASE
	CASE ALLTRIM(thisform.cbte) == "ND"
		DO CASE
			CASE ALLTRIM(tc_letra) == "A"
				RETURN 2
			CASE ALLTRIM(tc_letra) == "B"
				RETURN 7
			CASE ALLTRIM(tc_letra) == "C"
				RETURN 12
		ENDCASE
	CASE ALLTRIM(thisform.cbte) == "NC"
		DO CASE
			CASE ALLTRIM(tc_letra) == "A"
				RETURN 3
			CASE ALLTRIM(tc_letra) == "B"
				RETURN 8
			CASE ALLTRIM(tc_letra) == "C"
				RETURN 13
		ENDCASE	
ENDCASE

RETURN -1

