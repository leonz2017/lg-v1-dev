PROCEDURE get_resumen
********************************************************************
* Obtiene el resumen de cuentas corrientes
* Fecha: 16/06/2023
********************************************************************
LOCAL loRes
LOCAL lcSql

loRes = CREATEOBJECT("odbc_result")
lcSql = ""

TEXT TO lcSql NOSHOW
	SELECT
	    vendedores.idvendedor,
	    vendedores.nombre,
	    clientes.idcliente,
	    clientes.razsoc,
	    clientes.telefono,
	    clientes.email,
	    ROUND(SUM(cc.impdebe - cc.imphaber), 2) AS Saldo,
		0 AS 'idTipoCli',
		'' AS 'tipo_cli',
		0 AS 'credmax'
	FROM
	    vendedores
	    INNER JOIN clientes ON vendedores.idvendedor = clientes.idvendedor
	    INNER JOIN cc_cli cc ON clientes.idcliente = cc.idcliente
	WHERE
	    clientes.idcliente >= 0 AND clientes.idcliente <= 999999
	    AND clientes.idCondPago <> 1
	    AND clientes.idvendedor >= 0 AND clientes.idvendedor <= 999999
	    AND (cc.usubaja IS NULL OR cc.usubaja = '')
	GROUP BY
	    vendedores.idvendedor,
	    vendedores.nombre,
	    clientes.idcliente,
	    clientes.razsoc,
	    clientes.telefono,
	    clientes.email
	HAVING
	    ROUND(SUM(cc.impdebe - cc.imphaber), 2) != 0
	ORDER BY
	    clientes.idvendedor,
	    clientes.idcliente	
ENDTEXT

loRes.ActiveConnection = goConn.ActiveConnection
loRes.Cursor_Name = "cur_x"
loRes.OpenQuery(lcSql)

SELECT cur_resumen
APPEND FROM DBF("cur_x")
loRes.Close_Query()
ENDPROC
PROCEDURE clasificar_clientes
********************************************************************************
* Permite clasificar los clientes en base a los parámetros cargados en
* la tabla tiposcli
* Fecha: 16/06/2023
********************************************************************************
LOCAL loRes
LOCAL lcSql

WAIT WINDOW "Clasificando clientes, espere por favor..." NOWAIT

loRes = CREATEOBJECT("odbc_result")

SELECT cur_resumen
GO TOP
DO WHILE !EOF("cur_resumen")
	TEXT TO lcSql NOSHOW
		SELECT
			tc.idTipoCli,
			tc.descripcio,
			tc.credmax_dd,
			tc.credmax_hh
		FROM
			tiposcli tc
		WHERE
			tc.credmax_dd <= ?xsaldo AND
			tc.credmax_hh > ?xsaldo
	ENDTEXT
	lcSql = loRes.AddParameter(lcSql, "xsaldo", ALLTRIM(STR(cur_resumen.saldo, 20, 2)), .f., .f.)
	loRes.ActiveConnection = goConn.ActiveConnection
	loRes.Cursor_Name = "cur_x"
	loRes.OpenQuery(lcSql)

	SELECT cur_resumen
	LOCK()
	REPLACE cur_resumen.idTipoCli WITH cur_x.idTipoCli
	REPLACE cur_resumen.tipo_cli WITH cur_x.descripcio ADDITIVE
	REPLACE cur_resumen.credmax_dd WITH cur_x.credmax_dd ADDITIVE
	REPLACE cur_resumen.credmax_hh WITH cur_x.credmax_hh ADDITIVE
	UNLOCK
	loRes.Close_Query()

	SELECT cur_resumen
	SKIP
ENDDO

SELECT cur_resumen
GO TOP

WAIT WINDOW "Clientes clasificados" NOWAIT
ENDPROC
PROCEDURE grabar
***********************************************************************
* Actualiza la clasificación de clientes
* Fecha: 16/06/2023
***********************************************************************
LOCAL loCmd

loCmd = CREATEOBJECT("odbc_command")

goConn.BeginTransaction()
loCmd.ActiveConnection = goConn.ActiveConnection
SELECT cur_resumen
GO TOP
DO WHILE !EOF("cur_resumen")
	TEXT TO loCmd.CommandText NOSHOW
		UPDATE
			clientes
		SET
			clientes.idTipoCli = ?xidTipoCli
		WHERE
			clientes.idCliente = ?xidCliente
	ENDTEXT
	loCmd.AddParameter("xidTipoCli", ALLTRIM(STR(cur_resumen.idTipoCli)), .F., .F.)
	loCmd.AddParameter("xidCliente", ALLTRIM(STR(cur_resumen.idCliente)), .F., .F.)

	IF !loCmd.Execute() THEN
		goConn.Rollback()
		MESSAGEBOX(loCmd.ErrorMessage, 0+48, Thisform.Caption)
		RETURN
	ENDIF

	SELECT cur_resumen
	SKIP
ENDDO

goConn.Commit()
SELECT cur_resumen
GO TOP
