m.barcode = m.barcode + ALLTRIM(m.cae)
m.barcode = m.barcode + ALLTRIM(lcAnio)
m.barcode = m.barcode + REPLICATE("0", 2 - LEN(ALLTRIM(lcMes))) + ALLTRIM(lcMes)
m.barcode = m.barcode + REPLICATE("0", 2 - LEN(ALLTRIM(lcDia))) + ALLTRIM(lcDia)
