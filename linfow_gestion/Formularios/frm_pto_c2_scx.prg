			ENDIF
			
			REPLACE cur_Detalle.totNeto WITH lnSTNeto ADDITIVE
			REPLACE cur_Detalle.subTotal WITH lnSTNeto + cur_Detalle.impIVA ADDITIVE

			REPLACE cur_Detalle.pDtoCli1 WITH cur_Deta_View.pDtoCli1 ADDITIVE
